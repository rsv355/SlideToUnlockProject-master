<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:su="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

  <com.slidetounlock.widget.SlideToUnlock

      android:layout_marginTop="16dp"
      android:layout_marginBottom="16dp"
      android:id="@+id/slidetounlock"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_centerInParent="true"
      su:text="PARENT ZONE"

      />


    <com.slidetounlock.widget.SlideToUnlock2
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/slidetounlock2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        su:text="CHILD ZONE"

        />

    <com.slidetounlock.widget.SlideToUnlock3
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/slidetounlock3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        su:text="KIDS ZONE"

        />


</LinearLayout>
